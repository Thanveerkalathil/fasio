<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Product</th>
                                <th class="column-2"></th>
                                <th class="column-3">Price</th>
                                <th class="column-4">Quantity</th>
                                <th class="column-5">Total</th>
                            </tr>




                        </table>
                    </div>

                    <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm ">
                        <div class="dropdown w-100">
                            <button class="btn btn-secondary dropdown-toggle w-100" type="button"
                                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                                New Address
                            </button>
                            <div class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton">
                                <div class="dropdown-item " href="#">
                                    <input class="form-control " type="text" name="name" placeholder="Name" required>
                                    <input class="form-control m-t-15" type="text" name="housename"
                                        placeholder="House Name" required>
                                    <input class="form-control m-t-15" type="text" name="twon" placeholder="town" required>
                                    <input class="form-control m-t-15" type="text" name="district"required
                                        placeholder="District">
                                    <input class="form-control m-t-15" type="text" name="state" placeholder="State" required>
                                    <input class="form-control m-t-15" type="number" name="pincode" required
                                        placeholder="Pin Code">
                                    <input class="form-control m-t-15" type="email" name="email" placeholder="Email" required>
                                    <input class="form-control m-t-15" type="number" name="phone" placeholder="Phone" required>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Cart Totals
                    </h4>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Subtotal:
                            </span>
                        </div>

                        <div class="size-209">
                            <span class="mtext-110 cl2">
                                <i class="fa-solid fa-indian-rupee-sign mr-1"></i>{{total}}
                            </span>
                        </div>
                    </div>



                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div class="size-208">
                            <span class="mtext-101 cl2">
                                Total:
                            </span>
                        </div>

                        <div class="size-209 p-t-1">
                            <span class="mtext-110 cl2">
                                <i class="fa-solid fa-indian-rupee-sign mr-1"></i>{{total}}
                            </span>
                        </div>
                    </div>
                    <h4 class="mtext-109 cl2 p-b-30">
                        Payment Option
                    </h4>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1"
                            value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            Online Payment
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2"
                            value="option2">
                        <label class="form-check-label" for="exampleRadios2">
                            Cash On Delivery
                        </label>
                    </div>


                    <button href="/checkout"
                        class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 m-t-25">
                        Proceed to Checkout
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>