<header>
	<!-- Header desktop -->
	<div class="container-menu-desktop">
		<!-- Topbar -->


		<div class="wrap-menu-desktop">
			<nav class="limiter-menu-desktop container">

				<!-- Logo desktop -->
				<a href="#" class="logo">
					<h2 class="text-dark">𝐟𝐚𝐬𝐢𝐨 𝒇𝒂𝒔𝒊𝒐𝒏</h2>
				</a>

				<!-- Menu desktop -->
				<div class="menu-desktop">
					<ul class="main-menu">
						<li class="active-menu">
							<a href="/">Home</a>
						</li>

						<li>
							<a href="/shop/men">Men</a>
						</li>
						<li>
							<a href="/shop/women">Women</a>
						</li>
					</ul>
				</div>

				<!-- Icon header -->
				<div class="wrap-icon-header flex-w flex-r-m">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
						<i class="zmdi zmdi-search"></i>
					</div>
					{{#if cartCount}}
					<a class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11  js-show-cart " >
						<i class="fa-solid fa-bag-shopping"  >			
						</i>
						<span class="badge bg-secondary" id="cart-count">{{cartCount}}</span>
	
					</a>
					{{else}}
					<a class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart"
						data-notify="0">
						<i class="fa-solid fa-bag-shopping"></i>

						{{/if}}



						<a href="#"
							class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
							data-notify="0">
							<i class="zmdi zmdi-favorite-outline"></i>
						</a>
						{{#if user}}
						<a class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-user">
							<i class="fa-solid fa-user"></i>
						</a>
						<div class="wrap-header-user js-panel-user">
							<div class="s-full js-hide-user"></div>

							<div class="header-user flex-col-l p-l-65 p-r-25">
								<div class="header-user-title flex-w flex-sb-m p-b-8">
									<span class="mtext-103 cl2">
										<h2>𝐟𝐚𝐬𝐢𝐨 𝒇𝒂𝒔𝒊𝒐𝒏</h2>
									</span>
									<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-user">
										<i class="zmdi zmdi-close"></i>
									</div>
								</div>
								<a href="">
									<h5 class="font-weight-bold text-dark">Hello {{user.username}}</h5>
									<h5 class="p-t-5 text-dark">{{user.phoneNumber}}</h>
										<h5 class="p-t-5 text-dark">{{user.email}}</h>
											<h5 class=""></h5>
								</a>
								<hr style="width:100%;text-align:left;margin-left:0">

								<div class="header-user-content flex-w js-pscroll">
									<ul class="header-user-wrapitem w-full">
										<li class="header-user-item  m-b-12">
											<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
												<h5>Wishlist</h5>
											</a>

										</li>
										<li class="header-user-item hov-cl1 m-b-12">
											<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04 ">
												<h5>Add To Cart</h5>
											</a>
										</li>
										<li class="header-user-item  m-b-12">
											<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
												<h5>Orders</h5>
											</a>

										</li>
										<li class="header-user-item  m-b-12">
											<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
												<h5>Saved Address</h5>
											</a>
										</li>
										<li class="header-user-item hov-cl1 m-b-12">
											<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04 ">
												<h5>Saved Card</h5>
											</a>
										</li>

									</ul>
									<div class="w-full">
										<div class="header-user-buttons flex-w w-full">
											<a href="/edit-user"
												class="flex-c-m stext-101 cl0 size-107 bgblue bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
												EDIT PROFILE
											</a>

											<a href="/logout"
												class="flex-c-m stext-101 cl0 size-107 bgred bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
												LOGOUT
											</a>
										</div>
									</div>
								</div>
							</div>

						</div>
						{{else}}
						<a class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-user">
							<i class="fa-solid fa-user"></i>
						</a>
						<div class="wrap-header-user js-panel-user">
							<div class="s-full js-hide-user"></div>

							<div class="header-user flex-col-l p-l-65 p-r-25">
								<div class="header-user-title flex-w flex-sb-m p-b-8">
									<span class="mtext-103 cl2">
										<h2>𝐟𝐚𝐬𝐢𝐨 𝒇𝒂𝒔𝒊𝒐𝒏</h2>
									</span>
									<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-user">
										<i class="zmdi zmdi-close"></i>
									</div>
								</div>
								<h4 class="font-weight-bold text-dark">Welcome</h4>
								<h6>To access account and manage orders</h6>
								<div class="header-user-content flex-w js-pscroll">
									<ul class="header-user-wrapitem w-full">
										<li class="header-user-item flex-w flex-t m-b-12">
											<div class="header-user-item-txt p-t-10">
											</div>
										</li>
										<li class="header-user-item flex-w flex-t m-b-12">
											<div class="header-user-item-txt p-t-10">
												<a href="/authentication"
													class="flex-c-m stext-101 cl0 size-107 bg1 bor3 hov-btn1 p-lr-15 trans-04 m-r-8 m-b-10">
													LOGIN / SIGNUP
												</a>
											</div>
										</li>
									</ul>
								</div>
							</div>
						</div>
						{{/if}}

				</div>
			</nav>
		</div>
	</div>

	<!-- Header Mobile -->
	<div class="wrap-header-mobile">
		<!-- Logo moblie -->
		<div class="logo-mobile ">
			<a href="index.html">
				<h4 class="text-dark">𝐟𝐚𝐬𝐢𝐨 𝒇𝒂𝒔𝒊𝒐𝒏</h4>
			</a>
		</div>

		<!-- Icon header -->
		<div class="wrap-icon-header flex-w flex-r-m m-r-15">
			<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
				<i class="zmdi zmdi-search"></i>
			</div>

			<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart"
				data-notify="2">
				<i class="zmdi zmdi-shopping-cart"></i>
			</div>

			<a href="#" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti"
				data-notify="0">
				<i class="zmdi zmdi-favorite-outline"></i>
			</a>

			<a class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 js-show-user">
				<i class="fa-solid fa-user"></i>
			</a>
		</div>
		<!-- Button show menu -->
		<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
			<span class="hamburger-box">
				<span class="hamburger-inner"></span>
			</span>
		</div>
	</div>


	<!-- Menu Mobile -->
	<div class="menu-mobile">

		<ul class="main-menu-m">
			<li>
				<a href="index.html">Home</a>
				<ul class="sub-menu-m">
					<li><a href="index.html">Homepage 1</a></li>
				</ul>
				<span class="arrow-main-menu-m">
					<i class="fa fa-angle-right" aria-hidden="true"></i>
				</span>
			</li>

			<li>
				<a href="shop/men">Men</a>
			</li>
			<li>
				<a href="shop/women">Women</a>
			</li>

		</ul>
	</div>

	<!-- Modal Search -->
	<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
		<div class="container-search-header">
			<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
				<img src="/users/images/icons/icon-close2.png" alt="CLOSE">
			</button>

			<form class="wrap-search-header flex-w p-l-15">
				<button class="flex-c-m trans-04">
					<i class="zmdi zmdi-search"></i>
				</button>
				<input class="plh3" type="text" name="search" placeholder="Search...">
			</form>

		</div>

	</div>
</header>


<!-- Cart -->
<div class="wrap-header-cart js-panel-cart">
	<div class="s-full js-hide-cart"></div>

	<div class="header-cart flex-col-l p-l-65 p-r-25">
		<div class="header-cart-title flex-w flex-sb-m p-b-8">
			<span class="mtext-103 cl2">
				Your Cart
			</span>

			<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
				<i class="zmdi zmdi-close"></i>
			</div>
		</div>


		<div class="header-cart-content flex-w js-pscroll">
			<ul class="header-cart-wrapitem w-full">
				{{#each cartProducts}}
				<li class="header-cart-item flex-w flex-t m-b-12">
					{{#each this.products}}
					<div class="header-cart-item-img">
						<img src="/upload/{{this.images.[0].filename}}" alt="IMG">
					</div>

					<div class="header-cart-item-txt p-t-8">
						<a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
							{{this.productName}}
						</a>

						<span class="header-cart-item-info">
							{{this.price}}
						</span>
					</div>
					{{/each}}
				</li>
				{{/each}}

			</ul>

			<div class="w-full">
				<div class="header-cart-total w-full p-tb-40">
					Total: $75.00
				</div>

				<div class="header-cart-buttons flex-w w-full">
					<a href="/cart"
						class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
						View Cart
					</a>

					<a href="shoping-cart.html"
						class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
						Check Out
					</a>

				</div>
			</div>
		</div>
	</div>
</div>