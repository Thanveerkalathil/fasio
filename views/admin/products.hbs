<div class='main-panel '>
		<div class='content-wrapper '>
			<div class="row">
				<a class="btn btn-success ml-auto mr-5 font-weight-bold" href="/admin/add-products">+Add Products</a>

			</div>
			
				<div class='row mt-3'>
					<div class='col-12 grid-margin'>
						
						<div class='card'>
							<div class='card-body'>
								<h4 class='card-title'>Order Status</h4>
								<div class='table-responsive'>
									<table class='table'>
										<thead>
											<tr>
											
												<th> No. </th>
												<th> Product Name </th>
												<th> Brand </th>
												<th> Type </th>
												<th> Category </th>
												<th> Price </th>
												<th> Image </th>
											</tr>
										</thead>
										<tbody>
											{{#each products}}
											<tr>
												<td> 1 </td>
												<td> {{this.productName}} </td>
												<td> {{this.brand}} </td>
												<td> {{this.type}} </td>
												<td> {{this.category}} </td>
												<td> {{this.price}} </td>
												<td>
													{{#each this.images}}
													<img src="/upload/{{this.filename}}" alt="">
													{{/each}}
													</td>
											    <td> 
													<a href="/admin/edit-products/{{this._id}}" class='btn btn-outline-primary' >Edit</a>
											        <a class='btn btn-outline-danger' href="/admin/delete-products/{{this._id}}" onclick="return confirm('Are you want to delete {{this.products}}?')" >delete</a>
												</td>
											</tr>
											{{/each}}




