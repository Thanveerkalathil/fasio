<div class="main-panel">
  <div class="content-wrapper">
    <div class="container">

      <div class="row w-50 mx-auto">

        <form
          action="/admin/add-category"
          method="post"
          enctype="multipart/form-data"
          class="edit-form"
        >

          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Add Category</h2>
          </div>

          <div class="form-group mt-5">
            <label for="category">Category Name</label>
            <input
              type="text"
              class="form-control mb-4"
              name="category"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              placeholder="Enter Category"
            />
            {{! <label for="gender">Select Gender</label>
            <label class="container">
              <input type="checkbox" value="men" class="men"  name="type" />
              <span class="checkmark"></span>MEN
            </label>

            <label class="container">
              <input type="checkbox" value="women" class="women"  name="type" />
              <span class="checkmark"></span>WOMEN
            </label> }}

          </div>

          <label for="">Image</label>
          <img
            src=""
            alt=""
            id="imgView"
           style="width: 250px; height: 250px;;" 
          />

          <div class="custom-file mt-3 mb-3 col-sm-8">
            <input
              id="fileInput"
              type="file"
              style="display:none;"
              name="files"
              onchange="viewImage(event)"
              required
            />
            <input
              type="button"
              class="btn btn-primary btn-block mx-auto"
              value="UPLOAD PRODUCT IMAGE"
              onclick="document.getElementById('fileInput').click();"
            />
          </div>
          <button type="submit" class="btn btn-primary w-100 mt-4">Add Category</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function viewImage(event){
  document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>